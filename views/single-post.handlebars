<div class="btn-back"><a href="/dashboard"> ‚Üê Back to Dashboard</a></div>
<div class="card">
  <div class="card-header  flex-row justify-space-between">
    <h2>
      <a href="/post/{{post.id}}">
        <div class="col-8">{{post.postTitle}}</div>
      </a>
    </h2>
    <div class="col-3">posted by {{post.user.username}} on {{format_date post.dateCreated}}
    </div>
  </div>  
  <p class="card-body">
   {{post.postContent}}
  </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}"/>
<div class="card">
  <div class="card-header"> Comments</div>
  {{> comments post.comments}}
  {{#if loggedIn }}
  <form class="card-body" id="comment-form">
    <p class="form-label">Comment:</p>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <script src="/javascript/comment.js"></script>
  {{/if}}
</div>