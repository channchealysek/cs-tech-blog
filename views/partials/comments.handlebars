
<div class="comments">
  {{#each this}}
    <section class="comment" name="comment-{{id}}">
      <div class="meta">
        <h3><a href="../dashboard/comment/edit/{{id}}">{{user.username}}</a><span> on {{format_date date_created}}</span></h3>
      </div>
      <div class="comment-text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>